# =============================================
# MuStore Environment Configuration
# =============================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mustore
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=mustore-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=*

# Email Configuration (для будущего использования)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@mustore.ru

# Payment Gateway (для будущего использования)
PAYMENT_PUBLIC_KEY=your-payment-public-key
PAYMENT_SECRET_KEY=your-payment-secret-key

# Admin Default User
ADMIN_EMAIL=admin@mustore.ru
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# pgAdmin Configuration (для Docker)
PGADMIN_EMAIL=admin@mustore.ru
PGADMIN_PASSWORD=admin123